                    halign:"center"
                    font_name: 'Fonts/Montserrat/Montserrat-SemiBold.ttf'
                    size_hint_y:0.2

                MDIconButton:
                    icon:'arrow-up-drop-circle'
                    theme_text_color:"Custom"
                    text_color: 0, 0.5, 1, 1
                    user_font_size: "22sp"
                    on_press:x_sl.value=x_sl.value+1
                    pos_hint:{'center_x':0.5, 'center_y':0.5}

                MDSlider:
                    id:x_sl
                    orientation:'vertical'
                    min:0
                    max:100
