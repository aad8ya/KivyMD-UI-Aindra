                    orientation:'horizontal'
                    size_hint_x:0.1
                    
                    MDIconButton:
                        icon:'arrow-all'
                        theme_text_color:"Custom"
                        text_color: 0, 0.5, 1, 1
                        on_press:app.x_up_press(x_up_ts.text, x_up_s.text)
                        pos_hint:{'center_x':0.5, 'center_y':0.5}
                    
                BoxLayout:
                    orientation:'horizontal'
                    size_hint_x:0.1
                    
